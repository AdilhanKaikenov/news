<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="NewsForm" type="com.epam.adk.web.news.form.NewsForm"/>
    </form-beans>

    <action-mappings>

        <action path="/NewsList"
                type="com.epam.adk.web.news.action.ShowNewsListAction">
            <forward name="success" path="/WEB-INF/templates/pages/welcome.jsp"/>
        </action>
        <action path="/DeleteNews"
                type="com.epam.adk.web.news.action.DeleteNewsAction">
            <forward name="success" path="/NewsList.do" redirect="true"/>
        </action>
        <action path="/SelectLanguage"
                type="com.epam.adk.web.news.action.SelectLanguageAction">
            <forward name="success" path="/NewsList.do" redirect="true"/>
        </action>
        <action path="/ViewNews" type="com.epam.adk.web.news.action.ViewNewsAction">
            <forward name="success" path="/WEB-INF/templates/pages/news-view.jsp"/>
        </action>
        <action path="/ShowPage"
                type="com.epam.adk.web.news.action.ShowPageAction"
                parameter="method"
                name="NewsForm"
                validate="false"
                scope="request"
        >
            <forward name="show_add_or_edit_success" path="/WEB-INF/templates/pages/add-edit-news.jsp"/>
        </action>
        <action path="/AddEditNews"
                type="com.epam.adk.web.news.action.AddEditAction"
                name="NewsForm"
                scope="request"
                validate="true"
                input="/WEB-INF/templates/pages/add-edit-news.jsp"
        />

    </action-mappings>

    <!--RequestProcessor class-->
    <controller processorClass="org.springframework.web.struts.DelegatingTilesRequestProcessor"/>

    <message-resources parameter="i18n"/>

    <!-- Tiles plugin -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property value="/WEB-INF/config/tiles-defs.xml" property="definitions-config"/>
    </plug-in>

    <!-- Struts validator -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/config/validation.xml"
                      property="pathnames"/>
    </plug-in>

    <!-- Spring + Struts plugin -->
    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="classpath:spring-context.xml, classpath:action-servlet.xml"/>
    </plug-in>

</struts-config>