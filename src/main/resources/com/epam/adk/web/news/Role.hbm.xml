<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.epam.adk.web.news.model.Role" table="ROLES" schema="ADKDB">
        <id name="id">
            <column name="ID" sql-type="number(*)"/>
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="prefer_sequence_per_entity">true</param>
                <param name="optimizer">none</param>
                <param name="increment_size">1</param>
                <param name="sequence_name">ROLES_SEQ</param>
            </generator>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar2(200 char)" length="200" not-null="true" unique="true"/>
        </property>
    </class>

</hibernate-mapping>